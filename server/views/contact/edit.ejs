<%- include ../partials/header.ejs %>

<%- include ../partials/main_nav.ejs %>

<!-- Content for the Edit page -->
<div class="container">
    <div class="row">
      <div class="col-md-offset-3 col-md-6">
        <h1><%= title %></h1>
        <form class="form" method="post">
          <div class="form-group">
            <label for="IdTextField">First Name</label>
            <input
              type="text"
              class="form-control"
              id="IdTextField"
              placeholder="First Name"
              name="first"
              value="<%= contact.first %>"
              required
            />
          </div>
  
          <div class="form-group">
            <label for="NameTextField">Last Name</label>
            <input
              type="text"
              class="form-control"
              id="NameTextField"
              placeholder="Last Name"
              name="last"
              value="<%= contact.last %>"
              required
            />
          </div>
  
          <div class="form-group">
            <label for="DeptTextField">Phone Number</label>
            <input
              type="text"
              class="form-control"
              id="AuthorDeptTextField"
              placeholder="Phone Number"
              name="phone"
              value="<%= contact.phone %>"
              required
            />
          </div>
  
          <div class="form-group">
            <label for="SubTextField">Email Address</label>
            <input
              type="text"
              class="form-control"
              id="SubTextField"
              placeholder="Email Address"
              name="email"
              value="<%= contact.email %>"
              required
            />
          </div>
  
          <button type="submit" class="btn btn-primary">
            <i class="fa fa-check-square-o"></i> Submit
          </button>
          <a href="/contact" class="btn btn-warning"
            ><i class="fa fa-undo"></i> Cancel</a
          >
        </form>
      </div>
    </div>
  </div>

            </form>
        </div>

    </div>
</div>


<%- include ../partials/bottom_nav.ejs %>  

